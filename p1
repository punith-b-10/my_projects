import openai

# --- Step 1: Add your OpenAI API key ---
openai.api_key = "YOUR_OPENAI_API_KEY"  # Replace with your key

# --- Step 2: Get topic from user ---
topic = input("Enter a topic for quiz questions: ")

# --- Step 3: Create a prompt for ChatGPT ---
prompt = f"""
Generate 5 multiple choice quiz questions on the topic "{topic}".
Each question should have 4 options (A, B, C, D) and mention the correct answer.
Format:
Q1: ...
A)
B)
C)
D)
Answer: ...
"""

# --- Step 4: Send request to ChatGPT ---
response = openai.ChatCompletion.create(
    model="gpt-3.5-turbo",  # you can also use gpt-4
    messages=[{"role": "user", "content": prompt}],
    temperature=0.7
)

# --- Step 5: Print the quiz questions ---
quiz = response['choices'][0]['message']['content']
print("\n--- Quiz Questions ---\n")
print(quiz)
